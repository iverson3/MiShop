{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				// 配置编译到 App 平台时的特定样式
				"app-plus": {
				    // 不显示滚动条
					"scrollIndicator":"none",
					// app顶部导航栏自定义设置
					"titleNView": {
						// 搜索框
						"searchInput": {
							"align":"left",
							"backgroundColor":"#F7F7F7",
							"borderRadius":"4px",
							"disabled":"true",
							"placeholder":"kamaka ukulele",
							"placeholderColor":"#CCCCCC"
						},
						// 左右各一个按钮
						"buttons": [
							{
								"color":"#989898",
								"colorPressed":"#FD6801",
								"float":"left",
								"fontSize":"22px",
								"fontSrc":"/static/font/iconfont.ttf",
								"text": "\ue67a"  // 图标的Unicode (消息图标)
							},
							{
								"color":"#989898",
								"colorPressed":"#FD6801",
								"float":"right",
								"fontSize":"22px",
								"fontSrc":"/static/font/iconfont.ttf",
								"text": "\ue661"  // 图标的Unicode (扫一扫图标)
							}
						]
					}
				}
			}
		}
	    ,{
            "path" : "pages/class/class",
            "style": {
            	// 配置编译到 App 平台时的特定样式
            	"app-plus": {
            	    // 不显示滚动条
            		"scrollIndicator":"none",
					// 关闭回弹效果
					"bounce":"none",
            		// app顶部导航栏自定义设置
            		"titleNView": {
            			// 搜索框
            			"searchInput": {
            				"align":"left",
            				"backgroundColor":"#F7F7F7",
            				"borderRadius":"4px",
            				"disabled":"true",
            				"placeholder":"kamaka ukulele",
            				"placeholderColor":"#CCCCCC"
            			},
            			// 按钮
            			"buttons": [
            				{
            					"color":"#989898",
            					"colorPressed":"#FD6801",
            					"float":"right",
            					"fontSize":"22px",
            					"fontSrc":"/static/font/iconfont.ttf",
            					"text": "\ue67a"  // 图标的Unicode (消息图标)
            				}
            			]
            		}
            	}
            }
        }
        ,{
            "path" : "pages/cart/cart",
            "style" : {
				"app-plus": {
					// 取消app中默认的顶部导航栏，在页面中使用自定义的导航栏
					"titleNView": false,
					"scrollIndicator":"none",
					"bounce":"none"
				}
			}
        }
        ,{
            "path" : "pages/my/my",
            "style" : {
				"navigationBarTitleText": "我的"
			}
        }
        ,{
            "path" : "pages/ceshi/ceshi",
            "style" : {}
        }
        ,{
            "path" : "pages/search/search",
            "style": {
            	// 配置编译到 App 平台时的特定样式
            	"app-plus": {
            	    // 不显示滚动条
            		"scrollIndicator":"none",
            		// app顶部导航栏自定义设置
            		"titleNView": {
            			// 搜索框
            			"searchInput": {
            				"align":"left",
            				"backgroundColor":"#F7F7F7",
            				"borderRadius":"4px",
            				"disabled":"false",
            				"placeholder":"kamaka ukulele",
            				"placeholderColor":"#CCCCCC"
            			},
            			// 按钮
            			"buttons": [
            				{
            					"color":"#989898",
            					"colorPressed":"#FD6801",
            					"float":"right",
            					"fontSize":"16px",
            					"text": "搜索"
            				}
            			]
            		}
            	}
            }
        }
        ,{
            "path" : "pages/search-list/search-list",
            "style": {
            	// 配置编译到 App 平台时的特定样式
            	"app-plus": {
            	    // 不显示滚动条
            		"scrollIndicator":"none",
            		// app顶部导航栏自定义设置
            		"titleNView": {
            			// 搜索框
            			"searchInput": {
            				"align":"left",
            				"backgroundColor":"#F7F7F7",
            				"borderRadius":"4px",
            				"disabled":"false",
            				"placeholder":"kamaka ukulele",
            				"placeholderColor":"#CCCCCC"
            			},
            			// 按钮
            			"buttons": [
            				{
            					"color":"#989898",
            					"colorPressed":"#FD6801",
            					"float":"right",
            					"fontSize":"16px",
            					"text": "搜索"
            				}
            			]
            		}
            	}
            }
        }
        ,{
            "path" : "pages/detail/detail",
            "style" : {
				"app-plus": {
					"scrollIndicator":"none",
					"bounce":"none",
					// 导航栏属性设置
					"titleNView":{
						// 透明样式，顶部沉浸式显示
						"type":"transparent",
						"buttons":[
							{
								"type":"menu"  // "三个点"样式的菜单按钮
							}
						]
					}
				}
			}
        }
        ,{
            "path" : "pages/detail-comment/detail-comment",
            "style" : {
				"navigationBarTitleText":"商品评论",
				"app-plus": {
					"scrollIndicator":"none",
					"bounce":"none",
					"titleNView": {
						"buttons": [
							{
								"type":"share"
							}
						]
					}
				}
			}
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "Mi-Shop",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#FFFFFF"
	},
	"tabBar": {
		"color":"#B1B1B1",
		"selectedColor":"#FD6801",
		"borderStyle":"black",
		"backgroundColor":"#FFFFFF",
		"list": [
			{
				"pagePath":"pages/index/index",
				"iconPath":"static/tabbar/index.png",
				"selectedIconPath":"static/tabbar/indexSelected.png",
				"text":"首页"
			},
			{
				"pagePath":"pages/class/class",
				"iconPath":"static/tabbar/class.png",
				"selectedIconPath":"static/tabbar/classSelected.png",
				"text":"分类"
			},
			{
				"pagePath":"pages/cart/cart",
				"iconPath":"static/tabbar/cart.png",
				"selectedIconPath":"static/tabbar/cartSelected.png",
				"text":"购物车"
			},
			{
				"pagePath":"pages/my/my",
				"iconPath":"static/tabbar/my.png",
				"selectedIconPath":"static/tabbar/mySelected.png",
				"text":"我的"
			}
		]
	}
	
